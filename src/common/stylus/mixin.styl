// 文字超出省略号
text-over(){
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;
}

// 滚动
scrolling(){
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}